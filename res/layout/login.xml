<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center_horizontal"
  android:background="#FFF">
	<ImageView 
		android:id="@+id/_LoginHeaderImageView" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:background="@drawable/gr_header_bg_wo_books_new" 
		android:src="@drawable/goodreads_logo">
	</ImageView>
	<TextView 
		android:id="@+id/_LoginInstructionsTextView" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Clicking the Login button will take you to the Goodreads login page.  Login there to give this application permission to access your account." 
		android:textColor="#000" 
		android:typeface="serif">
	</TextView>
	<Button 
		android:id="@+id/_LoginButton" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Login">
	</Button>
	<TextView 
		android:id="@+id/_NoLoginInstructionsTextView" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="If you don't have an account, or would rather use the app without signing in, click the button below.  You will have access to the features that do not require an account." 
		android:textColor="#000" 
		android:typeface="serif">
	</TextView>
	<Button 
		android:id="@+id/_NoLoginButton" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Continue without Login">
	</Button>
</LinearLayout>
